@model ExpenseFormViewModel
<div class="text-center">
    <h1 class="display-4">Create / Edit</h1>
 
</div>



<form method="POST" asp-controller="Expense" asp-action="CreateEditExpenseForm">
    @* <label>Id</label> *@
    <input class="form-control" type="hidden" name="id" asp-for="@Model.Expense.Id"/>

    <label class="mt-4">Value</label>

    <input class="form-control" type="numeric" name="Value" asp-for="@Model.Expense.Value" />

    <label class="mt-4">Description</label>
    <input class="form-control " name="Description" asp-for="@Model.Expense.Description" />

    <label class="mt-4">Expense Category</label>
    <select class="form-control" asp-items="@Model.ExpenseCategories">
    </select>


    <button class="btn btn-primary mt-4">OK</button>
</form>