@{
}
@model List<Expense>
<h1>Expenses</h1>
<hr />

<a asp-controller="Expense" asp-action="CreateEditExpense" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>

            <th>Id</th>
            <th>Value</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value</td>
                    <td>@expense.Description</td>
                    <td><a class="btn btn-primary" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a></td>
                </tr>
            }

        }
    </tbody>
</table>